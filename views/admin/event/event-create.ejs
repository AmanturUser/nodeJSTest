<div class="event-container">
    <h1 class="event-heading">Создание события</h1>
    <form action="/admin/events/create" method="POST" class="event-form">
        <div class="event-form-group">
            <label class="event-label">Школа:</label>
            <select name="schoolId" class="event-select" required>
                <option value="">Выберите школу</option>
                <% schools.forEach(function(school) { %>
                    <option value="<%= school._id %>"><%= school.name %></option>
                <% }); %>
            </select>
        </div>

        <div class="event-form-group">
            <label class="event-label">Название события:</label>
            <input type="text" name="title" class="event-input" required>
        </div>

        <div class="event-form-group">
            <label class="event-label">Описание:</label>
            <textarea name="description" class="event-textarea" rows="4" required></textarea>
        </div>

        <div class="event-form-group">
            <label class="event-label">Дата события:</label>
            <input type="datetime-local" name="date" class="event-input" required>
        </div>

        <div class="event-form-actions">
            <button type="submit" class="event-btn event-btn-create">Создать</button>
            <a href="/admin/events" class="event-btn event-btn-cancel">Отмена</a>
        </div>
    </form>
</div>