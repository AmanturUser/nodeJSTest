<div class="container">
    <div class="school-container">
        <h1><%= school.name %></h1>
        <p><strong>Описание:</strong> <%= school.description %></p>
        
        <div class="school-stats">
            <a href="/admin/classes" class="stat-card">
                <h3>Классы</h3>
                <p><%= classCount %></p>
            </a>
            <a href="/admin/pupils" class="stat-card">
                <h3>Ученики</h3>
                <p><%= studentCount %></p>
            </a>
            <a href="" class="stat-card">
                <h3>Администраторы</h3>
                <p><%= teacherCount %></p>
            </a>
        </div>

        <div class="actions">
            <a href="/admin/schools/<%= school._id %>/edit" class="btn btn-primary">Редактировать информацию</a>
        </div>
    </div>
</div>