<!DOCTYPE html>
<html>
<head>
    <title>Создание опроса</title>
</head>
<body>
    <main class="container">
        <h1>Создание опроса</h1>
        
        <form action="/admin/surveys/create" method="POST">
            <% if (locals.error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            <div class="survey-form">
            <div class="form-group">
                <label for="name">Название опроса:</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    value="<%= locals.formData ? formData.name : '' %>"
                >
            </div>
            
            <div class="form-group">
                <label for="description">Описание:</label>
                <textarea 
                    id="description" 
                    name="description" 
                    required
                ><%= locals.formData ? formData.description : '' %></textarea>
            </div>

            <div class="form-group">
                <label>Школа:</label>
                <select id="schoolFilter" name="schoolFilter">
                    <option value="">Все школы</option>
                    <% if (locals.schools) { %>
                        <% schools.forEach(function(school) { %>
                            <option value="<%= school._id %>">
                                <%= school.name %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
            
            <div class="form-group">
                <label>Классы:</label>
                <div class="select-actions">
                    <a href="#" id="selectAll">Выбрать всех</a> | 
                    <a href="#" id="clearAll">Очистить выбор</a>
                </div>
                <div class="custom-select">
                    <div class="select-options">
                        <% if (locals.classes) { %>
                            <% classes.forEach(function(classItem) { %>
                                <div class="option-item" data-school-id="<%= classItem.schoolId %>">
                                    <label class="checkbox-label">
                                        <input 
                                            type="checkbox" 
                                            name="classIds[]" 
                                            value="<%= classItem._id %>"
                                        >
                                        <span><%= classItem.name %></span>
                                    </label>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Варианты ответов:</label>
                <div id="optionsContainer" class="options-container">
                    <!-- Варианты ответов будут добавляться здесь -->
                </div>
                <button type="button" class="add-option">Добавить вариант</button>
            </div>

            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a href="/admin/survey" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </main>
</body>
</html>