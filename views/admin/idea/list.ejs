<!-- views/ideas/list.ejs -->
<div class="school-ideas-container">
    <h1>Инициативы учеников</h1>
    
    <div class="school-ideas-list">
        <% if (ideas.length === 0) { %>
            <p class="school-idea-empty">Нет идей для рассмотрения</p>
        <% } else { %>
            <% ideas.forEach(function(idea) { %>
                <div class="school-idea-card" data-id="<%= idea._id %>">
                    <h3><%= idea.name %></h3>
                    <p><%= idea.description %></p>
                    
                    <div class="school-idea-meta">
                        <span class="school-idea-author">
                            Автор: <%= idea.userFullName %> 
                        </span>
                        <div class="school-idea-time">
                            <%= idea.formattedDate %>
                        </div>
                    </div>
                    <h1></h1>
                    <div class="school-idea-actions">
                        <% if (idea.status === 'PENDING') { %>
                            <button 
                                class="school-idea-btn school-idea-btn-approve"
                                data-idea-id="<%= idea._id %>">
                                Подтвердить
                            </button>
                            <button 
                                class="school-idea-btn school-idea-btn-reject"
                                data-idea-id="<%= idea._id %>">
                                Отклонить
                            </button>
                        <% } else { %>
                            <div class="school-idea-status <%= 
                                idea.status === 'APPROVED' 
                                    ? 'school-idea-status-approved' 
                                    : 'school-idea-status-rejected' 
                            %>">
                                <%= idea.status === 'APPROVED' ? 'Подтверждено' : 'Отклонено' %>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>