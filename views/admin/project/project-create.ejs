<div class="sp-container">
    <h1>Создание нового проекта школы</h1>
    
    <form id="projectForm" class="sp-form">
        <label for="projectName">Название проекта:</label>
        <input type="text" id="projectName" name="projectName" required>
        
        <label for="projectDescription">Описание проекта:</label>
        <textarea id="projectDescription" name="projectDescription" rows="4" required></textarea>
        
        <label for="schoolSelect">Выберите школу:</label>
        <select id="schoolSelect" name="schoolId" required>
            <% if (schools.length!=1) { %>
                <option value="">Выберите школу</option>
            <% } %>
            <% schools.forEach(function(school) { %>
                <option value="<%= school._id %>" <%= locals.formData && formData.schoolId == school._id ? 'selected' : '' %>>
                    <%= school.name %>
                </option>
            <% }); %>
        </select>
        
        <button type="submit" class="sp-button">Создать проект</button>
    </form>
    
    <h2>Добавление участников проекта</h2>
    <div id="participantSelection" class="sp-class-section">
        <label for="classSelect">Выберите класс:</label>
        <select id="classSelect" name="classId">
            <option value="">Сначала выберите школу</option>
        </select>
        
        <div class="sp-select-all-container">
            <input type="checkbox" id="selectAll">
            <label for="selectAll">Выбрать всех</label>
        </div>
        
        <div id="studentsList" class="sp-student-list">
            <!-- Список учеников будет добавлен динамически -->
        </div>
    </div>
    
    <h3>Выбранные участники проекта</h3>
    <ul id="currentParticipants" class="sp-participants-list sp-current-participants">
        <!-- Список выбранных участников будет добавлен динамически -->
    </ul>
</div>

<script>
        // Глобальный объект для хранения данных
         window.serverData = {
            schools:  JSON.stringify(schools),
            classes: JSON.stringify(classes)
        };
    </script>